<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".ReviewsScreenActivity">

    <!-- Flecha para volver atrás -->
    <ImageView
        android:id="@+id/goBack"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:contentDescription="@string/volver"
        android:src="@drawable/back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Título “Reseñas” -->
    <TextView
        android:id="@+id/criticas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/resenias"
        android:textAlignment="center"
        android:textColor="#1B3"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/goBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp" />

    <!-- Aquí el RecyclerView ocupa TODO el espacio libre debajo del título -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewreviews"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/criticas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:listitem="@layout/tu_item_de_review" />

</androidx.constraintlayout.widget.ConstraintLayout>
