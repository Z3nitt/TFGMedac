<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".OffersActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_background"
        android:title="@string/ayuda"
        android:titleTextColor="@color/black"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="200dp"
        style="?android:attr/progressBarStyleLarge" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_question_1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="@color/principal"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_answer_1"
                android:padding="12dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_question_2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="@color/principal"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_answer_2"
                android:padding="12dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/p3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_question_3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="@color/principal"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_answer_3"
                android:padding="12dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/p4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_question_4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="@color/principal"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/r4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_answer_4"
                android:padding="12dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>





</LinearLayout>
