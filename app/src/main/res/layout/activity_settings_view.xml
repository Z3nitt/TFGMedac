<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFFFE0">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Barra superior con el botón de retroceso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <!-- ImageView para la flecha de retroceso -->
                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Volver atrás"
                    android:src="@drawable/back_arrow" />

                <!-- Título de la pantalla -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Configuración"
                    android:textColor="#1B3"
                    android:textSize="26sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- NOTIFICACIONES -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Notificaciones"
                        android:textColor="#1976D2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tus novedades" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_follower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nuevo seguidor" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nuevo comentario" />

                    <TextView
                        android:id="@+id/configureNotificat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Configurar notificaciones"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CUENTA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Cuenta"
                        android:textColor="#1976D2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/SettingsItem"
                        android:text="Mi cuenta" />

                    <TextView
                        style="@style/SettingsItem"
                        android:text="Usuarios bloqueados" />

                    <TextView
                        style="@style/SettingsItem"
                        android:text="Restaurar suscripción" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AYUDA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Ayuda"
                        android:textColor="#1976D2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/SettingsItem"
                        android:text="Centro de ayuda" />

                    <TextView
                        style="@style/SettingsItem"
                        android:text="Reporta un problema" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- GENERAL -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="General"
                        android:textColor="#1976D2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/SettingsItem"
                        android:text="Condiciones de uso" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
